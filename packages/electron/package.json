    "@electron-forge/shared-types": "7.10.2",
    "@libsql/darwin-arm64": "0.5.22",
    "@types/bun": "latest",
    "@types/nodemailer": "^6.4.14",
    "electron": "39.0.0"
  },
  "dependencies": {
    "@libsql/client": "0.15.15",
    "@monorepo/web": "workspace:*",
    "@paralleldrive/cuid2": "3.0.4",
    "drizzle-kit": "0.31.6",
    "drizzle-orm": "0.44.7",
    "electron-squirrel-startup": "^1.0.1",
    "nodemailer": "^6.9.7",
