{
  "name": "@monorepo/electron",
  "productName": "烟熏三文鱼的阅读神器",
  "version": "1.0.0",
  "description": "RSS阅读器",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "bun run build.ts",
    "dev": "NODE_ENV=development bun run build.ts && electron-forge start",
